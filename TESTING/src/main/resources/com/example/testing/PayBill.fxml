<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #ADD8E6;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.testing.Controllers.PayBillController">
    <children>
        <ToolBar prefHeight="40.0" prefWidth="605.0">
            <items>
                <Label fx:id="payBillLabel" alignment="CENTER" prefHeight="26.0" prefWidth="68.0" text="Pay Bill" textAlignment="CENTER" textFill="#0b55b5">
                    <font>
                        <Font name="Bahnschrift Bold" size="14.0" />
                    </font>
                </Label>
            </items>
        </ToolBar>

        <Label fx:id="billAmountLBL" alignment="CENTER" contentDisplay="CENTER" layoutX="78.0" layoutY="200.0" prefHeight="26.0" prefWidth="95.0" text="BILL AMOUNT" textAlignment="CENTER" textFill="#0b55b5" wrapText="true">
            <font>
                <Font name="Bahnschrift Bold" size="14.0" />
            </font>
        </Label>
        <TextField fx:id="payTxt" layoutX="207.0" layoutY="200.0" prefHeight="26.0" prefWidth="191.0" />
        <Button fx:id="payBTN" layoutX="255.0" layoutY="263.0" mnemonicParsing="false" onMouseClicked="#pay" prefHeight="34.0" prefWidth="95.0" text="PAY" textFill="#0b55b5">
            <font>
                <Font name="Bahnschrift Bold" size="14.0" />
            </font>
        </Button>
        <Button fx:id="backbuttonn" layoutX="31.0" layoutY="350.0" mnemonicParsing="false" onMouseClicked="#back" prefHeight="26.0" prefWidth="60.0" text="Back" textFill="#0b55b5">
            <font>
                <Font name="Bahnschrift Bold" size="14.0" />
            </font>
        </Button>

        <Label fx:id="Services" alignment="CENTER" layoutX="145.0" layoutY="77.0" prefHeight="77.0" prefWidth="316.0" text="Please Enter The Bill Amount You Want to Pay" textAlignment="CENTER" textFill="#0b55b5" wrapText="true">
            <font>
                <Font name="Bahnschrift Bold" size="27.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
